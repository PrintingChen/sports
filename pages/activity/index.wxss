page {
  background: #f4f4f4;
}

.list-pic {
  position: relative;
  width: 710rpx;
  height: 310rpx;
  margin: 0 auto;
  overflow: hidden;
  text-align: left;
  background: #fff;
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.list-pic .item-title {
  position: absolute;
  bottom: 0;
  font-size: 22rpx;
  color: #ccc;
  width: 670rpx;
  padding: 0 20rpx;
  line-height: 60rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.list-pic.disabled:after {
  position: absolute;
  content: '活动已结束';
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  text-align: center;
  line-height: 310rpx;
  color: #FFF;
  background: rgba(0, 0, 0, 0.5);
}

.list-pic image {
  width: 100%;
  height: 100%;
}
