.page{
    height: 100%;
    background-color: #efefef;
}

.page .top-bg{
    position: relative;
    height: 241rpx;
}

.page .top-bg image{
    width: 100%;
    height: 100%;
}

.page .top-bg .status-text{
    position: absolute;
    color: #fff;
    font-size: 40rpx;
    top: 100rpx;
    left: 130rpx;
}

.page__bd{
    padding: 0;
}

.weui-cell {
    padding:0 40rpx;
    height: 147rpx;
    box-sizing: border-box;
}
.weui-cell_primary {
    font-size: 30rpx;
    color: #575755;
    padding-left:16rpx;
    box-sizing: border-box;
}
.weui-cell_primary .nickname{
    margin-right: 40rpx;
}

.page__bd .weui-panel {
    margin-top: 0;
}

.page__bd .weui-panel .weui-panel__ft {
    height: 100%;
}

.page__bd .weui-panel .weui-panel__ft .weui-cell.weui-cell_access.weui-cell_link {
    height: 100%;
    box-sizing: border-box;
    padding: 0 40rpx;
    box-sizing: border-box;
    color: #575755;
    font-size: 30rpx;
}

.page .order-list{
    margin-top: 20rpx;
}

.page .order-list .order-list-item{
    color: #575755;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}

.page .order-list .order-list-item .order-sn{
    height: 88rpx;
    line-height: 88rpx;
    background-color: #f6f6f6;
    border-bottom: 1px solid #e8e8e8;
    box-sizing: border-box;
    padding: 0 40rpx;
}

.page .order-list .order-list-item .order-sn image{
    height: 36rpx;
    width: 28rpx;
    float: left;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    margin-right: 14rpx;
}

.sn{
    float: left;
}

.order-status{
    float: right;
}

.order-status.to-paid{
    color: #4ea4a7;
}
.order-status.dispatching{
    color: #f61938;
}

.order-content{
    box-sizing: border-box;
    padding: 36rpx 40rpx;
    display: flex;
    border-bottom: 1px solid #e8e8e8;
}

.order-content .goods-pic{
   width: 180rpx;
   height: 180rpx;
   border-radius: 8rpx;
   border: 1px solid #bebebe;
}

.order-content .goods-pic image{
   width: 100%;
   height: 100%;
   border-radius: 8rpx;
}

.order-content .order-content-right{
    position: relative;
   flex: 1;
   box-sizing: border-box;
   padding-left: 32rpx;
}

.order-content .order-content-right .goods-name{
   max-height: 80rpx;
   overflow: hidden;
   text-align: justify;
}

.order-content .order-content-right .bottom{
   position: absolute;
   bottom: 0;
   width: 100%;
   box-sizing: border-box;
   padding-right: 40rpx;
}

.order-content .order-content-right .bottom .goods-opt{
    color: #a2a2a2;
}

.order-content .order-content-right .bottom .goods-opt .color{
   margin-right: 20rpx;
}

.order-content .order-content-right .bottom .goods-price .price-1{
   margin-right: 20rpx;
   color: #f61938;
}

.order-content .order-content-right .bottom .goods-price .price-2{
   text-decoration: line-through;
}

.order-content .order-content-right .bottom .goods-price .goods-amount{
   float: right;
}

.count{
   height: 100rpx;
   line-height: 100rpx;
   text-align: right;
   border-bottom: 1px solid #e8e8e8;
   box-sizing: border-box;
   padding: 0 40rpx;
   font-size: 30rpx;
}

.count .total{
  color: #f61938;
}

.order-msg{
    font-size: 30rpx;
    height: 209rpx;
    background: #fff;
    box-sizing: border-box;
    padding: 40rpx;
    color: #a2a2a2;
    display: flex;
    border-bottom: 1px solid #e8e8e8; 
}

.order-msg .order-msg-left{
    flex: 1;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}

.order-msg .order-msg-right{
    width: 200rpx;
    box-sizing: border-box;
    text-align: right;
}

.order-msg .order-msg-right .contact{
    box-sizing: border-box;
    width: 180rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    border: 1px solid #b1b1b1;
    color: #6a6a6a;
    border-radius: 8rpx;
    float: right;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}