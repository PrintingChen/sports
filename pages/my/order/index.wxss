.page {
    height: 100%;
    background-color: #efefef;
}

.page .order-list {}

.page .order-list .order-list-item {
    color: #575755;
    font-size: 24rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}

.page .order-list .order-list-item .order-sn {
    height: 88rpx;
    line-height: 88rpx;
    background-color: #f6f6f6;
    border-bottom: 1px solid #e8e8e8;
    box-sizing: border-box;
    padding: 0 40rpx;
}

.page .order-list .order-list-item .order-sn image {
    height: 36rpx;
    width: 28rpx;
    float: left;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    margin-right: 14rpx;
}

.sn {
    float: left;
}

.order-status {
    float: right;
}

.order-status.to-paid {
    color: #4ea4a7;
}

.order-status.dispatching {
    color: #f61938;
}

.order-content {
    box-sizing: border-box;
    padding: 36rpx 40rpx;
    display: flex;
    border-bottom: 1px solid #e8e8e8;
}

.order-content .goods-pic {
    width: 180rpx;
    height: 180rpx;
    border-radius: 8rpx;
    border: 1px solid #bebebe;
}

.order-content .goods-pic image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}

.order-content .order-content-right {
    position: relative;
    flex: 1;
    box-sizing: border-box;
    padding-left: 32rpx;
}

.order-content .order-content-right .goods-name {
    /* max-height: 80rpx;
    overflow: hidden;
    text-align: justify; */
    height: 100rpx;
	text-align: justify;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	align-content: center;
}

.order-content .order-content-right .bottom {
    position: absolute;
    bottom: 0;
    box-sizing: border-box;
    padding-right: 40rpx;
}

.order-content .order-content-right .bottom .goods-opt {
    color: #a2a2a2;
}

.order-content .order-content-right .bottom .goods-opt .color {
    margin-right: 20rpx;
}

.order-content .order-content-right .bottom .goods-price .price-1 {
    margin-right: 20rpx;
    color: #f61938;
}

.order-content .order-content-right .bottom .goods-price .price-2 {
    text-decoration: line-through;
}

.order-content .order-content-right .bottom .goods-price .goods-amount {
    float: right;
}

.count {
    height: 100rpx;
    line-height: 100rpx;
    text-align: right;
    border-bottom: 1px solid #e8e8e8;
    box-sizing: border-box;
    padding: 0 40rpx;
    font-size: 30rpx;
}

.count .total {
    color: #f61938;
}

.controls {
    height: 116rpx;
    line-height: 116rpx;
    text-align: right;
    box-sizing: border-box;
    padding: 0 40rpx;
    border-bottom: 1px solid #e8e8e8;
}

.controls .btn {
    width: 180rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    border-radius: 8rpx;
    border: 1px solid #b1b1b1;
    color: #6a6a6a;
    float: right;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}

.controls .btn.cancel {
    margin-right: 30rpx;
}