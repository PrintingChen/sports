.page{

}

.page .page__bd{
    padding: 0;
}

.page .page__bd .weui-cells.weui-cells_after-title{
    background-color: transparent;
}

.page .page__bd .weui-cells.weui-cells_after-title .radio-item{
    margin-bottom: 20rpx;
    background:#fff;
    border-bottom:1px solid #e8e8e8;

}

.page .page__bd .weui-cells.weui-cells_after-title .weui-cell.weui-check__label{
    min-height:100rpx;
    background-color:transparent;
}

.page .page__bd .weui-cells.weui-cells_after-title .weui-cell.weui-check__label .weui-cell__bd{
    box-sizing: border-box;
    text-align: justify;
    padding-left: 40rpx;
    font-size: 30rpx;
    color: #a4a4a4;
}

.page .page__bd .weui-cells.weui-cells_after-title .weui-cell.weui-check__label .weui-cell__bd .name{

    font-size: 32rpx;
    color: #333;
}

.page .page__bd .weui-cells.weui-cells_after-title .weui-cell.weui-check__label::before{
    left: 0;
}

.page .page__bd .weui-cells.weui-cells_after-title .weui-cell.weui-check__label{
    /* padding: 10px 0; */
}

.page .page__bd .weui-cells.weui-cells_after-title .radio-bottom{
   border-top: 1px solid #e8e8e8;
   height: 108rpx;
   line-height: 108rpx;
   font-size: 30rpx;
   color: #a4a4a4;
   box-sizing: border-box;
   padding: 0 40rpx;
}

.page .page__bd .weui-cells.weui-cells_after-title .radio-bottom .c-btn{
    width: 180rpx;
    height: 64rpx;
    line-height: 64rpx;
    border: 1px solid #a4a4a4;
    color: #a4a4a4;
    float: right;
    border-radius: 8rpx;
    text-align: center;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}

.page .page__bd .weui-cells.weui-cells_after-title .radio-bottom .c-btn.edit{
    margin-right: 20rpx;
    /* top: 3px; */
}

.page .page__bd .weui-cells.weui-cells_after-title .radio-bottom .c-btn image{
    width: 32rpx;
    height: 32rpx;
    top: 6rpx;
    position: relative;
    margin-right: 20rpx;
}

.page .page__bd .weui-cells.weui-cells_after-title .radio-bottom .c-btn.edit image{
    top: 4rpx;
}

.page .page__bd .weui-cells.weui-cells_after-title .weui-cell.weui-check__label .weui-cell__ft.weui-cell__ft_in-radio{
    position: relative;
    top: 50%; 
}

.page .page__bd .weui-cells.weui-cells_after-title .weui-cell.weui-check__label .weui-cell__ft.weui-cell__ft_in-radio icon::before{
   color: red;
}

.page .page__bd .weui-cells.weui-cells_after-title .weui-cell.weui-check__label .weui-cell__bd{
    /* float: left; */
}

.add-address{
    margin-top: 20rpx;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
    text-align: center;
    color: #575755;
    font-size: 30rpx;
}

.add-address .middle{
    position: relative;
    display: inline-block;
}

.add-address .middle image{
    position: absolute;
    width: 36rpx;
    height: 36rpx;
    top: 50%;
    transform: translateY(-50%);
}

.add-address .middle text{
    
    padding-left: 50rpx;
}