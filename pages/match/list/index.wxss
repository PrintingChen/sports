page {
  background: #f4f4f4;
}

.list-pic {
  position: relative;
  width: 710rpx;
  min-height: 420rpx;
  margin: 0 auto;
  overflow: hidden;
  text-align: left;
  background: #fff;
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
  border-radius: 5rpx;
}

.list-pic .item-title {
  position: relative;
  font-size: 26rpx;
  color: #666;
  width: 670rpx;
  padding: 0 20rpx;
  line-height: 60rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  overflow: hidden;
}

.list-pic .item-desc {
  position: relative;
  font-size: 22rpx;
  color: #b1b1b1;
  width: 670rpx;
  padding: 15rpx 20rpx 35rpx 20rpx;
  line-height: 30rpx;
  overflow: hidden;
}

.list-pic image {
  width: 100%;
  height: 340rpx;
}

.weui-navbar__item {
  padding: 20rpx 0;
}

.weui-navbar {
  position: fixed;
  background: #fff;
}

.weui-tab__panel {
  padding-top: 90rpx;
}

.list-match {
  position: relative;
  width: 680rpx;
  height: 424rpx;
  left: 35rpx;
  margin-top: 35rpx;
  background: #fff;
  border-radius: 10rpx;
  border: 2rpx solid #e8e8e8;
}

.list-match .item-title {
  position: absolute;
  color: #3a3a3a;
  line-height: 94rpx;
  height: 94rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 20rpx;
  width: 640rpx;
  text-align: center;
  border-bottom: 2rpx solid #e8e8e8;
}

.list-match .right-item, .list-match .left-item {
  position: absolute;
  width: 250rpx;
  text-align: center;
  font-size: 22rpx;
  color: #a2a2a2;
  right: 0;
  top: 120rpx;
}

.list-match .right-item {
  left: 0;
}

.list-match .text {
  width: 90%;
  margin-left: 5%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-match .text-bottom {
  position: absolute;
  bottom: 0;
  height: 96rpx;
  border-top: 2rpx solid #e8e8e8;
  line-height: 80rpx;
  color: #3a3a3a;
  padding: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  width: 640rpx;
  text-align: center;
}

.list-match .text-item {
  position: absolute;
  width: 300rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #3a3a3a;
  text-align: center;
  left: 50%;
  margin-left: -150rpx;
  top: 160rpx;
}
.left-score {
  display: inline-block;
  width: 50rpx;
  text-align: right;
}
.right-score {
  display: inline-block;
  width: 50rpx;
  text-align: left;
}
.list-match image {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
}
